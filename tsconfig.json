{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "portal/src/main/resources/dist",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "portal/src/main/resources/assets/*"
      ],
      "@ui/*": [
        "portal/src/main/resources/components/*"
      ]
    }
  },
  "include": [
    "portal/src/main/resources/index.tsx",
    "portal/src/main/resources/custom.d.ts"
  ]
}
